{
  "extends": ["next/core-web-vitals"],
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prefer-const": "error",
    "no-var": "error"
  },
  "ignorePatterns": ["dist/", ".next/", "out/", "node_modules/", "*.config.js"]
}
